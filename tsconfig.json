{
    "version": "2.3",
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "declaration": true,
        "sourceMap": true,
        "inlineSources": true,
        "lib": ["es5", "es2015.promise", "es2015.core", "dom"],
        "typeRoots": [
            "node_modules/@types"
        ],
        "outDir": "esm",
        "rootDir": "src"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}